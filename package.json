{
    "name": "jenerate",
    "version": "1.0.0",
    "description": "Static site generator for https://jenadairlab.org",
    "keywords": [],
    "homepage": "https://github.com/ifeanyiecheruo/jenerate#readme",
    "bugs": {
        "url": "https://github.com/ifeanyiecheruo/jenerate/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ifeanyiecheruo/jenerate.git"
    },
    "license": "MIT",
    "author": "Ifeanyi Echeruo <ifeanyi.echeruo@outlook.com>",
    "type": "module",
    "main": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "bin": {
        "jenerate": "./dist/start.mjs"
    },
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "preinstall": "git config --local core.hooksPath tools/git/hooks",
        "start": "node ./dist/start.mjs",
        "start:watch": "node ./dist/start.mjs --watch",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "test": "node --test --experimental-test-coverage --enable-source-maps --test-coverage-lines 80 --test-coverage-branches 80 --test-coverage-functions 90",
        "test:watch": "npm run test -- --watch",
        "lint": "biome check --no-errors-on-unmatched",
        "lint:fix": "biome check --no-errors-on-unmatched --fix",
        "deploy": "",
        "ci": "npm run ci:check && npm run ci:build && npm run ci:test",
        "ci:check": "npm run lint",
        "ci:build": "npm run build",
        "ci:test": "npm run test -- --test-reporter ./tools/markdown-test-reporter.mts --test-reporter-destination ./out/test-report.md --test-reporter spec --test-reporter-destination stdout",
        "git:pre-commit": "npm run lint:fix -- --staged",
        "git:pre-push": "npm run lint -- --changed"
    },
    "dependencies": {
        "chokidar": "^4.0.3",
        "csv-parser": "^3.2.0",
        "ejs": "^3.1.10",
        "jsdom": "^26.1.0",
        "mime": "^4.1.0",
        "pretty": "^2.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.3",
        "@types/chokidar": "^1.7.5",
        "@types/ejs": "^3.1.5",
        "@types/jsdom": "^21.1.7",
        "@types/mime": "^3.0.4",
        "@types/node": "^24.3.0",
        "@types/pretty": "^2.0.3",
        "typescript": "^5.9.2"
    }
}
