    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start",
                "--",
                "--from",
                "..\\jenadairlab.org\\src\\website",
                "--to",
                "..\\jenadair.org\\dist",
                "**\\*.html"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "preLaunchTask": "npm: build"
        },

        {
            "name": "Debug Tests",
            "request": "launch",
            "runtimeArgs": ["run-script", "test"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "preLaunchTask": "npm: build"
        }
    ]
}
